<div class="flex w-full flex-col justify-between overflow-y-auto">
  <div class="xs:p-4 <%= items.length === 0 ? 'h-full' : '' %> p-2 py-4">
    <div class="xs:px-0 mb-4 grid grid-cols-[1fr_auto] items-center gap-4 px-2">
      <div
        class="border-default-medium flex h-full min-w-0 shrink items-center gap-2 border-b"
      >
        <h2
          class="text-heading-dark dark:text-heading-light truncate text-2xl font-semibold md:text-3xl"
        >
          <%= title %>
        </h2>
        <!--prettier-ignore-->
        <% if(folder?.favorite) { %>
          <%- include('../components/icon-star', {size: 'lg'}) %>
        <% } %>
        <% if(Object.keys(folder).length !== 0) { %>
          <%- include('../components/dropdown-item', {item: folder, context: 'title'}) %>
        <% } %>
      </div>

      <!--prettier-ignore-->
      <%- include('../components/dropdown-sort', {disabled: currentPage === 'recent' ? true : false}) %>
    </div>
    <!--prettier-ignore-->
    <% if (items.length > 0) { %> 
      <%- include('../components/list-items') %>
    <% } else { %>
      <%- include('../components/placeholder-empty-folder') %>
    <% } %>
  </div>
  <%- include('../partials/footer') %>
</div>
