<form
  action="/files/upload"
  method="post"
  enctype="multipart/form-data"
  class="container-form"
>
  <!--prettier-ignore-->
  <%- include('../components/form-hidden-input') %>
  <%- include('../components/form-errors') %>
  <div class="input-file">
    <label class="style-required" for="upload">Select file to upload:</label>
    <input
      class="border"
      aria-describedby="upload-input-help"
      id="upload"
      name="upload"
      type="file"
      required
    />

    <p class="text-helper" id="upload-input-help">* Maximum file size: 10MB</p>
  </div>
  <div class="input-select">
    <label class="style-required" for="parentId">Location:</label>
    <select id="parentId" name="parentId" class="">
      <option value="" selected>Home</option>
      <hr />
      <optgroup label="Recent Folders">
        <% folderList.forEach(folder => { %>
        <option value="<%= folder.id %>"><%= folder.name %></option>
        <% }); %>
      </optgroup>
    </select>
  </div>
  <div class="button-group">
    <button
      data-modal-hide="<%= modalId %>"
      type="button"
      class="button-cancel"
    >
      Cancel
    </button>
    <button type="submit" class="button-submit-neutral">Submit</button>
  </div>
</form>
