<div
  id="<%= modalId %>"
  tabindex="-1"
  aria-hidden="true"
  aria-labelledby="<%= modalId %>-title"
  class="fixed left-0 right-0 top-0 z-50 hidden h-[calc(100%-1rem)] max-h-full w-full items-center justify-center overflow-y-auto overflow-x-hidden md:inset-0"
>
  <div class="relative max-h-full w-full max-w-lg p-4">
    <div class="border-custom rounded-base">
      <div class="container-modal">
        <div
          class="border-default flex items-center justify-between border-b p-2"
        >
          <h3 id="<%= modalId %>-title" class="text-heading text-lg font-medium"><%= modalTitle %></h3>
          <button
            type="button"
            class="button-icon p-2"
            data-modal-hide="<%= modalId %>"
          >
            <svg
              class="h-5 w-5"
              aria-hidden="true"
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              fill="none"
              viewBox="0 0 24 24"
            >
              <path
                stroke="currentColor"
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M6 18 17.94 6M18 18 6.06 6"
              />
            </svg>
            <span class="sr-only">Close modal</span>
          </button>
        </div>
        <div class="px-2 py-4 md:px-4 md:py-6"><%- include(formPath) %></div>
      </div>
    </div>
  </div>
</div>
